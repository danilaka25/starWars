{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "lib": [
      "es2017"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "paths": {
      "*": [
        "types/*"
      ],
      "$src/*": [
        "src/*"
      ],
      "$root/*": [
        "./*"
      ],
      "$assets/*": [
        "assets/*"
      ],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2017",
  },
  "exclude": [
    "node_modules",
  ],
  "useDefineForClassFields": true,
  "allowJs": true
}
